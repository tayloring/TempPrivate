<?xml version="1.0" encoding="utf-8"?>
<com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="当前城市"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fag"
        android:name="com.whu.Gongyinchao.schoolservice.outdoormodule.OutdoorView"/>



    <com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/current_city_title"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/current_city_status"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/current_city_radio"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/current_city_delete"
            android:text="删除"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>

</com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>