<?xml version="1.0" encoding="utf-8"?>
<com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/share_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/indoor_share_item"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/share_title"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/share_icon"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout>


    <TextView
        android:id="@+id/share_abstract"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/share_reporter"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>