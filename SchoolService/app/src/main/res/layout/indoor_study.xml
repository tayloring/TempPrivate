<?xml version="1.0" encoding="utf-8"?>
<com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/indoor_study_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/titlebar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/indoor_study_back"
            android:text="自习室信息"
            android:textSize="16sp" />
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout>

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indoor_weather_background"
        android:padding="10dp">

        <TextView
            android:id="@+id/indoor_study_nearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="我现在位于 -- 文理学部教五" />

        <TextView
            android:id="@+id/indoor_study_nearinstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="0m" />

    </com.whu.Gongyinchao.schoolservice.common.uikit.SSRelativeLayout>

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/indoor_study_nearclassroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="文理学部教五"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/indoor_study_nearclassinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:padding="10dp"
            android:textSize="16sp" />
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indoor_weather_background"
        android:orientation="vertical"
        android:padding="10dp">

        <com.whu.Gongyinchao.schoolservice.common.uikit.SSPickerView
            android:id="@+id/indoor_study_nears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"></com.whu.Gongyinchao.schoolservice.common.uikit.SSPickerView>

        <ListView
            android:id="@+id/indoor_study_useful"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>
</com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>
