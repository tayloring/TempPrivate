<?xml version="1.0" encoding="utf-8"?>
<com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/search"
            android:background="@drawable/outdoor_selecter_background"
            android:drawableTop="@drawable/outdoor_search"
            android:drawablePadding="5dp"
            android:text="搜索"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/route"
            android:drawableTop="@drawable/outdoor_route"
            android:background="@drawable/outdoor_selecter_background"
            android:drawablePadding="5dp"
            android:text="路线"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guide"
            android:drawableTop="@drawable/outdoor_guide"
            android:background="@drawable/outdoor_selecter_background"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="导航"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>

    <com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/play"
            android:drawableTop="@drawable/outdoor_nearby"
            android:background="@drawable/outdoor_selecter_background"
            android:drawablePadding="5dp"
            android:text="娱乐"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bank"
            android:drawableTop="@drawable/outdoor_find"
            android:background="@drawable/outdoor_selecter_background"
            android:drawablePadding="5dp"
            android:text="ATM"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/station"
            android:background="@drawable/outdoor_selecter_background"
            android:drawableTop="@drawable/outdoor_station"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="车站"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>

</com.whu.Gongyinchao.schoolservice.common.uikit.SSLinearLayout>